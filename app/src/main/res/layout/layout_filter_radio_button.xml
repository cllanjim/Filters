<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aandroid="http://schemas.android.com/tools">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/filter_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/filter_icon_image"
        android:paddingTop="3dp"
        app:civ_border_color="@color/filterIcon_border_color"
        app:civ_border_width="1dp"
      />

    <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:maxLength="9"
        android:paddingTop="2dp"
        android:text="test"
        android:textColor="@color/filterIcon_text_color"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="9sp"
        />

</merge>