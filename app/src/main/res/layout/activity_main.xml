<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.helloworld.bartender.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical">

        <!--android:layout_height="match_parent"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.helloworld.bartender.FilterableCamera.FCameraView
                android:id="@+id/cameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_flash_square" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:shadowColor="@color/shadow"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="50.0"
                android:textColor="@color/white"
                android:textSize="200sp" />

            <LinearLayout
                android:id="@+id/topLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/cameraSwitchingBtt"
                    android:layout_width="@android:dimen/app_icon_size"
                    android:layout_height="@android:dimen/app_icon_size"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:cropToPadding="false"
                    app:srcCompat="@mipmap/ic_camera_switching" />

                <ImageButton
                    android:id="@+id/cameraFlashBtt"
                    android:layout_width="@android:dimen/app_icon_size"
                    android:layout_height="@android:dimen/app_icon_size"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@mipmap/ic_camera_flash_auto" />

                <ImageButton
                    android:id="@+id/cameraTimerBtt"
                    android:layout_width="@android:dimen/app_icon_size"
                    android:layout_height="@android:dimen/app_icon_size"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@mipmap/ic_camera_timer_off" />

                <ImageButton
                    android:id="@+id/settingBtt"
                    android:layout_width="@android:dimen/app_icon_size"
                    android:layout_height="@android:dimen/app_icon_size"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@mipmap/ic_setting" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/slidingPage"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/transBlack"
                android:orientation="horizontal"
                android:layout_alignBottom="@id/cameraView"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                >


                <!--android:visibility="gone"-->
                <android.support.v7.widget.RecyclerView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/filterList">
                </android.support.v7.widget.RecyclerView>
                <!--<Button-->
                    <!--android:id="@+id/BackBtt"-->
                    <!--android:onClick="onArrowButton1Clicked"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="back"-->
                    <!--android:padding="20dp"-->
                    <!--android:textSize="20sp"-->
                    <!--android:layout_marginRight="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--/>-->



                <!--<ImageView-->
                    <!--android:id="@+id/imageView4"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--app:srcCompat="@mipmap/ic_launcher" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/imageView3"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--app:srcCompat="@mipmap/ic_launcher" />-->

                <!--<ImageButton-->
                    <!--android:id="@+id/ArrowBtt2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="52dp"-->
                    <!--android:layout_weight="0.5"-->

                    <!--android:onClick="onArrowButton1Clicked"-->
                    <!--app:srcCompat="@android:drawable/ic_media_play" />-->
             <!---->
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/galleryBtt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:onClick="onGalleryBttClicked"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/cameraCaptureBtt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/FilmBtt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>
</LinearLayout>

