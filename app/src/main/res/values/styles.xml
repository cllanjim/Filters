<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Transparent.Permission"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_btn</item>
    </style>

    <style name="animation_popup">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>
    
    <declare-styleable name="FilterRadioButton">
        <attr name="FilterRadioButton_filter_name" format="string"/>
        <attr name="FilterRadioButton_filter_name_color" format="color"/>
        <attr name="FilterRadioButton_filter_image" format="integer"/>
        <attr name="FilterRadioButton_filter_image_border_color" format="color"/>
        <attr name="FilterRadioButton_filter_image_border_pressed_color" format="color"/>
        <attr name="FilterRadioButton_filter_name_pressed_color" format="color"/>
    </declare-styleable>

</resources>
